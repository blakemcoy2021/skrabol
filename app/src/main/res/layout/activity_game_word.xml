<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameWordActivity">


    <LinearLayout
        android:id="@+id/layout_gamepool"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_gravity="center|center_horizontal|center_vertical"

        app:layout_constraintTop_toBottomOf="@+id/gameLayoutTop"
        app:layout_constraintBottom_toTopOf="@+id/gameLayoutDown"
        app:layout_constraintLeft_toRightOf="@id/gameLayoutLeft"
        app:layout_constraintRight_toLeftOf="@id/gameLayoutRight">

        <TextView
            android:id="@+id/txtvwGameWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WORD_CREATED_HERE"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_margin="20sp"
            android:padding="10sp"/>

        <TextView
            android:id="@+id/txtvwGameStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WORD_FOUND_STATE_HERE"
            android:gravity="center"
            android:textSize="18sp"
            android:padding="10sp"/>

        <TextView
            android:id="@+id/txtvwGamePoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="center"
            android:textSize="30sp"
            android:padding="10sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_gamereroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="RE-ROLL"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="5sp"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="5sp" />

            <Button
                android:id="@+id/btn_gameclear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="CLEAR"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="20sp"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="20sp" />

        </LinearLayout>

    </LinearLayout>
    <androidx.constraintlayout.widget.Guideline android:id="@+id/gameLayoutTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.25"
        android:orientation="horizontal" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/gameLayoutDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.63"
        android:orientation="horizontal" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/gameLayoutLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.05"
        android:orientation="vertical" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/gameLayoutRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.95"
        android:orientation="vertical" />
    <!-- ************************************ VIEW BOUNDARY HERE -->

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/gameLetterLayoutTop"
        app:layout_constraintBottom_toTopOf="@+id/gameLetterLayoutDown"
        app:layout_constraintLeft_toRightOf="@id/gameLetterLayoutLeft"
        app:layout_constraintRight_toLeftOf="@id/gameLetterLayoutRight">

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/layout_letterpool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap"
            app:alignItems="center"
            app:justifyContent="center"
            app:alignContent="center">

        </com.google.android.flexbox.FlexboxLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.Guideline android:id="@+id/gameLetterLayoutTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.65"
        android:orientation="horizontal" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/gameLetterLayoutDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.88"
        android:orientation="horizontal" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/gameLetterLayoutLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.05"
        android:orientation="vertical" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/gameLetterLayoutRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.95"
        android:orientation="vertical" />


