    <EditText android:id="@+id/edx_word"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:backgroundTint="@color/white"

        android:hint="Word Search Here"
        android:textColor="@color/white"

        android:padding="10sp"

        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeMaxTextSize="100sp"
        app:autoSizeStepGranularity="2sp"

        app:layout_constraintTop_toBottomOf="@+id/dictWordEdxTop"
        app:layout_constraintBottom_toTopOf="@+id/dictWordEdxDown"
        app:layout_constraintLeft_toRightOf="@id/dictWordEdxLeft"
        app:layout_constraintRight_toLeftOf="@id/dictWordEdxRight"/>
    <androidx.constraintlayout.widget.Guideline android:id="@+id/dictWordEdxTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.9"
        android:orientation="horizontal" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/dictWordEdxDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.97"
        android:orientation="horizontal" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/dictWordEdxLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.05"
        android:orientation="vertical" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/dictWordEdxRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.8"
        android:orientation="vertical" />
    <!-- ************************************ VIEW BOUNDARY HERE -->


    <ImageView android:id="@+id/btn_run"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:backgroundTint="@color/white"
        android:padding="2sp"

        android:src="@drawable/ic_baseline_play_circle_filled_24"

        app:layout_constraintTop_toBottomOf="@+id/dictRunBtnTop"
        app:layout_constraintBottom_toTopOf="@+id/dictRunBtnDown"
        app:layout_constraintLeft_toRightOf="@id/dictRunBtnLeft"
        app:layout_constraintRight_toLeftOf="@id/dictRunBtnRight"/>
    <androidx.constraintlayout.widget.Guideline android:id="@+id/dictRunBtnTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.9"
        android:orientation="horizontal" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/dictRunBtnDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.97"
        android:orientation="horizontal" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/dictRunBtnLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.82"
        android:orientation="vertical" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/dictRunBtnRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.97"
        android:orientation="vertical" />





