<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameWordActivity">

    <HorizontalScrollView
        android:id="@+id/scroll_board"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/gameBoardLayoutTop"
        app:layout_constraintBottom_toTopOf="@+id/gameBoardLayoutDown"
        app:layout_constraintLeft_toRightOf="@id/gameBoardLayoutLeft"
        app:layout_constraintRight_toLeftOf="@id/gameBoardLayoutRight">

        <LinearLayout
            android:layout_width="500sp"
            android:layout_height="500sp"
            android:orientation="horizontal">

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/layout_checkerboard"
                android:layout_width="500sp"
                android:layout_height="500sp"
                app:flexWrap="wrap"
                app:alignItems="center"
                app:justifyContent="center"
                app:alignContent="center"
                app:showDivider="middle">

            </com.google.android.flexbox.FlexboxLayout>

        </LinearLayout>

    </HorizontalScrollView>
    <androidx.constraintlayout.widget.Guideline android:id="@+id/gameBoardLayoutTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.12"
        android:orientation="horizontal" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/gameBoardLayoutDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.84"
        android:orientation="horizontal" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/gameBoardLayoutLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.02"
        android:orientation="vertical" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/gameBoardLayoutRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.98"
        android:orientation="vertical" />



</androidx.constraintlayout.widget.ConstraintLayout>